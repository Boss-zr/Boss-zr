$(function () {
    $("div.dropup").find(".select-item:first-child").each(function () {
        var val = $(this).attr("title");
        if (val != undefined && val != "") {
            var li = $(this).parent().siblings("ul").find("li[title='" + val + "']");
            var html = li.find("a").html();
            $(this).html(html);
        }
    });
});